@model IEnumerable<PatteDoie.Models.Scattergories.ScattergoriesGame>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaxRound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentRound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentLetter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaxRound)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentRound)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentLetter)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
