@page "/scattergories/{Id}"
@inherits GamePage


<h1>GetGame</h1>

<div>
    <h4>Scattergories</h4>
    <hr/>

    <div>
        <div>
            <h1>Current Letter</h1>
            <h2>@Row.CurrentLetter</h2>
        </div>
        <div>
            <table>
                <thead>
                    <tr>
                        <th>
                            Category
                        </th>
                        <th>
                            Your answers
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var categories in Row.Categories)
                    {
                        <tr>
                            <td>@categories.Name</td>
                            <td>Response</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
