@page "/scattergories/{Id}"
@inherits GamePage


<h1>GetGame</h1>

<div>
    <h4>Scattergories</h4>
    <hr/>

    <div>
        <div>
            <h1>@Row.CurrentLetter</h1>
        </div>
    </div>

    <div>
        <h4>Ranking</h4>
        <ol>
            @foreach(var player in FinalRanking)
            {
                <li>@player.User.Nickname - @player.Score</li>
            }
        </ol>
    </div>

</div>
