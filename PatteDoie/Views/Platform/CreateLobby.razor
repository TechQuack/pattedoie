@inherits AuthenticatedPage
@using PatteDoie.Enums;
@using PatteDoie.Extensions;

@page "/lobby/create"

<PageTitle>Create a lobby</PageTitle>

<h1>Create a lobby for the game @GameName</h1>

<h4>PlatformLobby</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form @onsubmit="Submit">
            <AntiforgeryToken/>
            <div class="form-group">
                <label class="control-label">Lobby Name</label>
                <InputText @bind-Value="LobbyName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <InputText @bind-Value="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/lobby">Back to List</a>
</div>


