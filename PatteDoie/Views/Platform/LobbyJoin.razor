@page "/lobby/join/{Id}"
@inherits AuthenticatedPage

<PageTitle>Join a lobby</PageTitle>

<div id="lobbyHeader">
    <div id="command">
        <a asp-action="Index" href="/">
            <img src="back-arrow.svg" />
        </a>
    </div>
    <h1>Join a lobby</h1>
</div>
<hr />
<div class="form">
    <form @onsubmit="Submit">
        <AntiforgeryToken />
        <div class="form-group">
            <label class="label">Password: &nbsp;</label>
            <InputText type="password" @bind-Value="Password" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Join" class="btn btn-danger" />
        </div>
    </form>
</div>